#GENERAL
APP={{ .ProjectName }}
VERSION=0.0.1
PORT=5002
SCHEME=http
LOG_LEVEL=debug
LOG_OUTPUT=all

{{ if .DBPostgres }}
# DB AUTH
DB_HOST=localhost
DB_USER=admin
DB_PASS=password
DB_PORT=5433
DB_NAME=mydatabase
DB_SSLMODE=disable
DB_TZ=Asia/Jakarta
DB_MAX_IDLE_CONNS=5
DB_MAX_OPEN_CONNS=10
DB_LOG_LEVEL=info
{{ else if .DBMysql}}
# DB AUTH
DB_HOST=localhost
DB_USER=user
DB_PASS=pass
DB_PORT=3306
DB_NAME=dbname
DB_CHARSET=utf8
DB_PARSE_TIME=True
DB_LOC=Local
DB_MAX_IDLE_CONNS=5
DB_MAX_OPEN_CONNS=10
DB_LOG_LEVEL=info
{{ else if .DBSqlServer}}
DB_HOST=localhost
DB_USER=user
DB_PASS=pass
DB_PORT=9930
DB_NAME=dbname
DB_MAX_IDLE_CONNS=5
DB_MAX_OPEN_CONNS=10
DB_LOG_LEVEL=info
{{ end }}

{{ if .Redis }}
# REDIS
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=password
REDIS_MAX_IDLE=10
REDIS_MAX_ACTIVE=100
REDIS_IDLE_TIMEOUT=100
REDIS_MAX_CONN_LIFE_TIME=600
{{ end }}

{{ if .JWT }}
# JWT
JWT_KEY=peeDt3HMzQR1noh0
JWT_EXPIRED_IN=180000
JWT_REFRESH_EXPIRED_IN=360000
{{ end }}

{{ if .Swagger }}
# SWAGGER
ENABLE_SWAGGER=true
{{ end }}